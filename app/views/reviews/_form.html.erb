<div class="container-fluid">
  <%= simple_form_for([@restaurant, @restaurant.reviews.build]) do |f| %>
      <div id="rating-form">
        <label>Rating</label>
      </div>
      <%= f.input :comment %>
      <%= f.button :submit %>
  <% end %>
</div>

<script>
  $('#rating-form').raty({
      path: '/assets/',
      scoreName: 'review[rating]'
      });
</script>