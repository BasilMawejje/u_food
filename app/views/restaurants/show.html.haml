- if @cart
  %p
    Cart:
    = @cart.shopping_cart_items.count

- @dishes.each do |dish|
  %p
    Dish:
    = dish.name
  %p
    Description:
    = dish.description
  %p
    Category:
    = dish.category
  %p
    Restaurant:
    = dish.restaurant
  %p
    Price:
    = dish.price
    $
  %img{alt: dish.name, src: dish.pic_url}/

  = link_to 'Add to cart', cart_add_to_cart_path(dish)
