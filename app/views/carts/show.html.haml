.container
  .row
    .col-md-4
      %h2 
        Your cart
      - @cart.shopping_cart_items.each do |dish|
        %p
          %div{id: dish.item.name}
            = dish.quantity
            = dish.item.name
            = dish.price
            $
            = form_tag cart_remove_item_path(dish), method: :get do
              = hidden_field_tag :dish_id, dish.item.id
              = hidden_field_tag :restaurant_id, @restaurant.id
              = number_field_tag :remove_amount, 1, min: 1
              = submit_tag 'Remove from cart', class: 'btn btn-primary'
      - if  @cart.shopping_cart_items.any?
        = link_to 'Clear cart', cart_clear_cart_path(@cart, restaurant_id: @restaurant.id), class: 'btn btn-primary'
      = link_to 'Back to restaurant', restaurant_path(@restaurant), class: 'btn btn-primary'

    .col-md-4
      %h2
        Checkout
      %h2
        Total items:
        = @cart.total_unique_items
      %h2
        Total cost:
        = @total_cost
        $
      %br
      .delivery
        = form_tag cart_path, method: :get do
          = radio_button_tag 'delivery', 'delivery', 'checked'
          Delivery (5$)
          -#.reveal-if-active
          -#  First name:
          -#  = text_field_tag 'firstname', nil, placeholder: 'First name', required: true
          -#  Last name:
          -#  = text_field_tag 'lastname', nil, placeholder: 'Last name', required: true
          -#  Delivery Address:
          -#  = text_field_tag 'street', nil, placeholder: 'Street Address & Number', required: true
          -#  = text_field_tag 'post_code', nil, placeholder: 'Post Code', required: true
          -#  = text_field_tag 'city', nil, placeholder: 'City', required: true
          = radio_button_tag 'delivery', 'pickup'
          Pickup (free)
          %br
        .delivery_button
          = submit_tag 'Save', class: 'btn btn-primary'

    .col-md-4
      = image_tag 'ufood-logo.png'